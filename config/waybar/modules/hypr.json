{
  "hyprland/window": {
    "max-length": "40"
  },

  "hyprland/workspaces": {
    "active-only": false,
    "all-outputs": true,
    "disable-scroll": false,
    "on-scroll-up": "hyprctl dispatch workspace -1",
    "on-scroll-down": "hyprctl dispatch workspace +1",
    "format": "{icon}",
    "on-click": "activate",
    "sort-by-number": true,
    "persistent_workspaces": { "*": 9 },
    "format-icons": {
      "urgent": "",
      "default": "",
      "1": "󰅨",
      "2": "󰖟",
      "3": "",
      "4": "󰠮",
      "5": "",
      "6": "󰅨",
      "7": "󰎄"
    }
  },

  "hyprland/language": {
    "format": "󰌌  {}",
    "format-uk": "укр",
    "format-en": "eng"
  }
}
